rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    /*******************************
     * Public, read-only collections
     *******************************/
    match /config/{doc} {
      allow read: if true;
      allow write: if false;
    }

    match /photos/{photoId} {
      allow read: if resource.data.visibility == "public";
      allow create, update, delete: if false;
    }

    match /stats/{doc} {
      allow read: if true;
      allow write: if false;
    }

    /*******************************
     * User profile (per-user access)
     *******************************/
    match /users/{uid} {
      allow read: if isOwner(uid);

      allow update: if isOwner(uid)
        && request.resource.data.keys().hasOnly(
          ['displayName', 'photoURL', 'phone', 'country', 'updatedAt']
        )
        && request.resource.data.diff(resource.data).changedKeys()
          .hasOnly(['displayName','photoURL','phone','country','updatedAt']);

      allow create: if isOwner(uid)
        && !('role' in request.resource.data)
        && !('plan' in request.resource.data)
        && !('planExpiresAt' in request.resource.data)
        && !('uploadsUsed' in request.resource.data);

      allow delete: if false;
    }

    /*****************************************
     * Purchases (BUYER) — this was missing ✅
     *****************************************/
    match /purchases/{purchaseId} {
      // Buyer can read their own purchases
      allow read: if signedIn() && resource.data.buyerUid == request.auth.uid;

      // Buyer can create only for themselves
      allow create: if signedIn()
        && request.resource.data.buyerUid == request.auth.uid
        && request.resource.data.keys().hasOnly([
          'buyerUid',
          'photoId',
          'fileName',
          'displayName',
          'price',
          'currency',
          'storagePath',
          'downloadUrl',
          'createdAt',
          'razorpay'
        ]);

      // No edits/deletes from client
      allow update, delete: if false;
    }

    /*****************************************
     * Payments & subscriptions (server-only)
     *****************************************/
    match /payments/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    match /orders/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    match /subscriptions/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
