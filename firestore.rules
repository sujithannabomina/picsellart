rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    /*******************************
     * Public, read-only collections
     *******************************/
    match /config/{doc} {
      allow read: if true;
      allow write: if false;
    }

    match /photos/{photoId} {
      allow read: if resource.data.visibility == "public";
      allow create, update, delete: if false;
    }

    match /stats/{doc} {
      allow read: if true;
      allow write: if false;
    }

    /*******************************
     * User profile (per-user access)
     *******************************/
    match /users/{uid} {
      allow read: if isOwner(uid);

      allow update: if isOwner(uid)
        && request.resource.data.keys().hasOnly(
          ['displayName', 'photoURL', 'phone', 'country', 'updatedAt']
        )
        && request.resource.data.diff(resource.data).changedKeys()
          .hasOnly(['displayName','photoURL','phone','country','updatedAt']);

      allow create: if isOwner(uid)
        && !('role' in request.resource.data)
        && !('plan' in request.resource.data)
        && !('planExpiresAt' in request.resource.data)
        && !('uploadsUsed' in request.resource.data);

      allow delete: if false;
    }

    /*****************************************
     * Sellers (client writes needed for onboarding)
     *****************************************/
    match /sellers/{uid} {
      // Seller can read their own seller profile
      allow read: if isOwner(uid);

      // Seller onboarding creates the doc after Razorpay handler
      // Allow create only by the owner and only limited safe fields.
      allow create: if isOwner(uid)
        && request.resource.data.keys().hasOnly([
          'uid','email','name','photoURL','planId','subscriptionId',
          'status','createdAt','updatedAt','phone','upiId'
        ]);

      // Allow updates only by the owner and only specific keys
      // (matches your SellerOnboarding.jsx: phone, upiId, name, status, updatedAt)
      allow update: if isOwner(uid)
        && request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'name','phone','upiId','status','updatedAt','planId','subscriptionId','photoURL','email','uid','createdAt'
        ]);

      allow delete: if false;
    }

    /*****************************************
     * Purchases (client writes needed for buyer checkout)
     *****************************************/
    // Your Checkout.jsx calls recordPurchase() from the client.
    // So we MUST allow a buyer to create their own purchase records.
    match /purchases/{purchaseId} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;

      allow create: if signedIn()
        && request.resource.data.userId == request.auth.uid;

      // Buyer should not edit purchases after creation (avoid tampering)
      allow update, delete: if false;
    }

    /*****************************************
     * Payments & subscriptions (server-only)
     *****************************************/
    match /payments/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    match /orders/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    match /subscriptions/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    /*********************************
     * Fallback: deny everything else
     *********************************/
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
