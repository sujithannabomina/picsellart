rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }
    function isSelf(uid) { return signedIn() && request.auth.uid == uid; }

    // Buyers profile
    match /buyers/{uid} {
      allow read, create, update: if isSelf(uid);
      allow delete: if false;
    }

    // Sellers profile (keep strict)
    match /sellers/{uid} {
      allow read, create, update: if isSelf(uid);
      allow delete: if false;
    }

    // Purchases: buyer can read only their purchases.
    match /purchases/{docId} {
      allow read: if signedIn() && resource.data.buyerUid == request.auth.uid;
      allow create, update, delete: if false; // server-only writes
    }

    // Orders: server-only
    match /orders/{orderId} {
      allow read: if signedIn() && resource.data.buyerUid == request.auth.uid;
      allow create, update, delete: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
