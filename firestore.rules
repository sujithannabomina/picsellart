rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /buyers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /sellers/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /items/{itemId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.uploadedBy == request.auth.uid;
    }
    
    match /purchases/{purchaseId} {
      allow read: if request.auth != null && resource.data.buyerUid == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    match /sales/{saleId} {
      allow read: if request.auth != null && resource.data.sellerId == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    match /accounts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}