rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    /*******************************
     * Public, read-only collections
     *******************************/
    match /config/{doc} {
      allow read: if true;
      allow write: if false;
    }

    match /photos/{photoId} {
      allow read: if resource.data.visibility == "public";
      allow create, update, delete: if false;
    }

    match /stats/{doc} {
      allow read: if true;
      allow write: if false;
    }

    /*******************************
     * Buyer profile (client writes)
     *******************************/
    match /buyers/{uid} {
      allow read: if isOwner(uid);

      // BuyerLogin ensureBuyerProfile() writes to /buyers/{uid}
      allow create, update: if isOwner(uid)
        && request.resource.data.keys().hasOnly([
          'uid', 'email', 'name', 'photoURL', 'role', 'createdAt', 'updatedAt'
        ]);

      allow delete: if false;
    }

    /*******************************
     * Seller profile (client writes)
     *******************************/
    match /sellers/{uid} {
      allow read: if isOwner(uid);

      // SellerOnboarding writes status/upiId/etc.
      allow create, update: if isOwner(uid);

      allow delete: if false;
    }

    /*****************************************
     * Purchases (BUYER)
     *****************************************/
    match /purchases/{purchaseId} {
      allow read: if signedIn() && resource.data.buyerUid == request.auth.uid;

      // We will create deterministic doc IDs: `${buyerUid}_${photoId}`
      allow create: if signedIn()
        && request.resource.data.buyerUid == request.auth.uid
        && request.resource.data.keys().hasOnly([
          'buyerUid',
          'photoId',
          'fileName',
          'displayName',
          'price',
          'currency',
          'storagePath',
          'downloadUrl',
          'createdAt',
          'razorpay'
        ]);

      allow update, delete: if false;
    }

    /*****************************************
     * Orders (server OR client verify route writes)
     *****************************************/
    match /orders/{orderId} {
      // Buyer can read their own order status
      allow read: if signedIn() && resource.data.buyerUid == request.auth.uid;
      allow create, update, delete: if false; // server-only
    }

    /*********************************
     * Fallback: deny everything else
     *********************************/
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
