{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "memory": 256,
      "maxDuration": 15
    }
  },

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "cleanUrls": true,
  "trailingSlash": false
}
