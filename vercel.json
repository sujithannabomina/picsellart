{
  "version": 2,
  "installCommand": "npm ci || npm install",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": "dist",

  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1536,
      "maxDuration": 10
    }
  },

  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|webp|svg|ico|txt|json|xml|woff|woff2|ttf|map)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1.$2"
    },

    { "handle": "filesystem" },

    { "src": "/.*", "dest": "/index.html" }
  ]
}
