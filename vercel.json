{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  // Single-Page App routing: send all routes to the built index.html
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  // Optional niceties
  "cleanUrls": true,
  "trailingSlash": false
}
