{
  "version": 2,
  "framework": "vite",
  "buildCommand": "vite build",
  "outputDirectory": "dist",

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/:all.(js|css|png|jpg|jpeg|gif|webp|svg|ico|txt|xml|woff|woff2)",
      "headers": [
        { "key": "cache-control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*.js" },
    { "source": "/((?!assets/|api/).*)", "destination": "/index.html" }
  ]
}
