{
  "version": 2,

  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/:all.(js|css|png|jpg|jpeg|gif|webp|svg|ico|txt|xml|woff|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/((?!api/|assets/).*)", "destination": "/index.html" }
  ]
}
