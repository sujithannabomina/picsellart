// FILE PATH: storage.rules
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    function isImage() {
      return request.resource != null
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }

    function under10MB() {
      return request.resource != null
        && request.resource.size < 10 * 1024 * 1024;
    }

    // 1) Public preview images (watermarked / sample)
    // Your Explore must be able to show previews.
    match /public/images/{file=**} {
      allow read: if true;
      allow write: if false;
    }

    // NOTE: You currently also have Buyer/ folder (capital B) with same 112 files.
    // Keep read ON for now so nothing breaks, but you SHOULD remove duplicates later.
    match /Buyer/{file=**} {
      allow read: if true;
      allow write: if false;
    }

    // 2) Seller uploads (private)
    match /sellers/{uid}/{file=**} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid) && isImage() && under10MB();
      allow delete: if isOwner(uid);
    }

    // 3) Buyer uploads (optional)
    match /buyers/{uid}/{file=**} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid) && isImage() && under10MB();
      allow delete: if isOwner(uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
