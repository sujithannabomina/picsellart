rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public gallery files shown on the homepage & explore
    match /public/images/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Seller uploads restricted to their own folder
    match /seller/{uid}/{file} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
