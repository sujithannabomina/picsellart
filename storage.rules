rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /public/watermarked/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    match /originals/{photoId}/{fileName} {
      allow write: if request.auth != null;
      allow read: if false; // downloads use signed URLs only
    }
    match /seller/{uid}/{file} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
