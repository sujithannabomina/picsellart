// FILE PATH: storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    // ✅ Public PREVIEWS ONLY (watermarked / low-res)
    // Put your Explore-visible images here.
    match /public/previews/{file=**} {
      allow read: if true;
      allow write: if false; // lock in production
    }

    // ✅ Seller can upload ORIGINALS privately (not public)
    match /protected/originals/sellers/{uid}/{file=**} {
      allow read: if isOwner(uid);   // seller can read own originals
      allow write: if isOwner(uid);  // seller can upload
    }

    // ✅ Sample ORIGINALS also private (payment required)
    match /protected/originals/samples/{file=**} {
      allow read: if false; // only server should generate signed URL after payment
      allow write: if false;
    }

    // ✅ Optional: seller can upload previews too (if you implement)
    match /public/previews/sellers/{uid}/{file=**} {
      allow read: if true;
      allow write: if isOwner(uid);
    }

    // Fallback deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
