rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public galleries are readable by everyone
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Legacy "Buyer/" gallery you asked to show on Explore
    match /Buyer/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Sellers can manage only their own files
    match /sellers/{uid}/{allPaths=**} {
      // Public read so Explore can list & show watermarked thumbnails.
      // If you want to restrict full-res downloads post-purchase, set this to false
      // and serve signed URLs after payment from a backend instead.
      allow read: if true;

      // Only the authenticated owner can write to their subtree
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Deny everything else by default
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
