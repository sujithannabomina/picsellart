rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public watermarked copies
    match /public/{uid}/{file} {
      allow read: if true;             // anyone can read Explore
      allow write: if false;           // only Functions write here
    }

    // Originals uploaded by signed-in user
    match /Buyer/{uid}/{file} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Default deny
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
