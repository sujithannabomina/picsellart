rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    function isImage() {
      return request.resource != null
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }

    function under10MB() {
      return request.resource != null
        && request.resource.size < 10 * 1024 * 1024;
    }

    // 1) PUBLIC PREVIEWS (watermarked / low-res previews)
    match /public/images/{file=**} {
      allow read: if true;
      allow write: if false;
    }

    // 2) BUYER ORIGINALS (your 112 originals are here)
    // IMPORTANT: keep private. Downloads happen via signed URL from server AFTER payment.
    match /Buyer/{file=**} {
      allow read: if false;
      allow write: if false;
    }

    // 3) SELLER UPLOADS (private to seller)
    match /sellers/{uid}/{file=**} {
      allow read: if isOwner(uid);

      allow create: if isOwner(uid) && isImage() && under10MB();
      allow update: if isOwner(uid) && isImage() && under10MB();
      allow delete: if isOwner(uid);
    }

    // 4) Optional buyer uploads (future)
    match /buyers/{uid}/{file=**} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid) && isImage() && under10MB();
      allow delete: if isOwner(uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
