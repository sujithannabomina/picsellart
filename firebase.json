{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/razorpay/create-order", "function": "razorpayCreateOrder" },
      { "source": "/api/razorpay/webhook", "function": "razorpayWebhook" },
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|webp|svg|ico)",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
        ]
      }
    ]
  },
  "functions": {
    "runtime": "nodejs20"
  }
}
